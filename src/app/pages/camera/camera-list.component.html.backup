<div class="camera-list-container">
  <!-- Header with total count -->
  <div class="camera-header">
    <h2 class="camera-title">Tổng: {{ totalCameras }} Camera</h2>
  </div>

  <!-- Camera Cards Grid -->
  <div class="camera-grid">
    <div class="camera-card" *ngFor="let camera of cameras">
      <div class="camera-card-header">
        <div class="camera-info">
          <h3 class="camera-name">{{ camera.name }}</h3>
          <div class="camera-category">
            <mat-icon class="category-icon">{{ getCategoryIcon(camera.category) }}</mat-icon>
            <span>{{ getCategoryLabel(camera.category) }}</span>
          </div>
        </div>
        
        <div class="camera-actions">
          <button 
            class="status-toggle"
            [class.on]="camera.connectionStatus === 1"
            [class.off]="camera.connectionStatus !== 1"
            (click)="toggleCameraStatus(camera)">
            <span class="status-text">{{ camera.connectionStatus === 1 ? 'ON' : 'OFF' }}</span>
          </button>
          <button class="settings-btn" (click)="openCameraSettings(camera)">
            <mat-icon>settings</mat-icon>
          </button>
        </div>
      </div>
      
      <div class="camera-stats">
        <span class="stats-label">Sự kiện:</span>
        <span class="stats-value">{{ camera.eventCount || 0 }}</span>
      </div>
    </div>
  </div>

  <!-- Loading state -->
  <div class="loading-container" *ngIf="loading">
    <mat-icon class="loading-spinner">cached</mat-icon>
    <p>Đang tải danh sách camera...</p>
  </div>

  <!-- Empty state -->
  <div class="empty-state" *ngIf="!loading && cameras.length === 0">
    <mat-icon>videocam_off</mat-icon>
    <p>Không có camera nào</p>
  </div>
</div>